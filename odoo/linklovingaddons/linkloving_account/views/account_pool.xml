<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="account_amount_receive_tree" model="ir.ui.view">
            <field name="name">account.amount.receive.tree</field>
            <field name="model">account.receive</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="customer_id"/>
                    <field name="amount"/>
                    <field name="account"/>
                    <field name="remark"/>
                    <field name="create_uid"/>
                    <field name="receive_date"/>
                    <field name="journal_id" string="账户" options='{ "no_create": True}' readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="account_pool_search_view" model="ir.ui.view">
            <field name="name">account.pool</field>
            <field name="model">account.pool</field>
            <field name="arch" type="xml">
                <search string="Search Vouchers">
                    <field name="partner_id" string="客户名称" filter_domain="[('partner_id.name','ilike',self)]"/>
                </search>
            </field>
        </record>


        <record id="account_receive_account_pool_form" model="ir.ui.view">
            <field name="name">account.amount.receive.form</field>
            <field name="model">account.pool</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="partner_id"/>
                            <field name="payment_id"/>
                            <field name="inv_id"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="account_receive_account_pool_tree" model="ir.ui.view">
            <field name="name">account.amount.receive.tree</field>
            <field name="model">account.pool</field>
            <field name="arch" type="xml">
                <tree create="false" delete="false">
                    <field name="partner_id" string="客户"/>
                    <field name="payment_id" string="收款单号"/>
                    <field name="sub_in" sum="已付" string="已付"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>

