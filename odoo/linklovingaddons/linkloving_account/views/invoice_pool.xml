<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="account_invoice_pool_tree" model="ir.ui.view">
            <field name="name">account.amount.receive.tree</field>
            <field name="model">account.invoice.pool</field>
            <field name="arch" type="xml">
                <tree create="false" delete="false">
                    <field name="partner_id" string="客户"/>
                    <field name="receive_id" string="收款单号"/>
                    <field name="inv_id" string="对账单号"/>
                    <field name="inv_amount" sum="应开发票" string="应开发票"/>
                    <field name="payment_amount" sum="已开发票" string="已开发票"/>
                    <field name="balance" sum="结余" string="结余"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>
        <record id="account_customer_invoice_pool_form" model="ir.ui.view">
            <field name="name">account.amount.receive.form</field>
            <field name="model">account.invoice.pool</field>
            <field name="arch" type="xml">
                <form>
                    <field name="partner_id" string="合作伙伴" domain="[('customer','=',True)]"/>
                    <field name="receive_id" string="收据单号" attrs="{'invisible':[('receive_id','=',False)]}"/>
                    <field name="inv_id" string="对账单号" attrs="{'invisible':[('inv_id','=',False)]}"/>
                    <field name="inv_amount" string="应开发票" attrs="{'invisible':[('inv_amount','=',False)]}"/>
                    <field name="payment_amount" attrs="{'invisible':[('payment_amount','=',False)]}"/>
                    <field name="create_date"/>
                </form>
            </field>
        </record>
        <record id="account_supplier_invoice_pool_form" model="ir.ui.view">
            <field name="name">account.amount.receive.form</field>
            <field name="model">account.invoice.pool</field>
            <field name="arch" type="xml">
                <form>
                    <field name="partner_id" string="合作伙伴" domain="[('supplier','=',True)]"/>
                    <field name="receive_id" string="收据单号" attrs="{'invisible':[('receive_id','=',False)]}"/>
                    <field name="inv_id" string="对账单号" attrs="{'invisible':[('inv_id','=',False)]}"/>
                    <field name="inv_amount" string="应开发票" attrs="{'invisible':[('inv_amount','=',False)]}"/>
                    <field name="payment_amount" attrs="{'invisible':[('payment_amount','=',False)]}"/>
                    <field name="create_date"/>
                </form>
            </field>
        </record>
        <record id="action_view_account_invoice_pool" model="ir.actions.act_window">
            <field name="name">客户发票</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.invoice.pool</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">[('partner_id','=',active_id)]</field>
            <field name="context">{}</field>
        </record>


    </data>
</openerp>

